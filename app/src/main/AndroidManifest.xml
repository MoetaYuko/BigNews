<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.explosion.bignews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.explosion.bignews.BigNews"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.explosion.bignews.ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.explosion.bignews.ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="org.explosion.bignews.ui.activity.StoryActivity"
            android:label="@string/title_activity_story"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
